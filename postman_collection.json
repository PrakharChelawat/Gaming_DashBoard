{
  "info": {
    "name": "Leaderboard API",
    "_postman_id": "e3a1d9a2-8b3f-4d2a-9f9f-123456789abc",
    "description": "Postman collection for the Spring Boot leaderboard service (submit score, get top, get rank). Set {{baseUrl}} to your server (default http://localhost:8080).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Submit Score",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": {{userId}},\n  \"score\": 150\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/leaderboard/submit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "leaderboard",
            "submit"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is JSON\", function () {",
              "    pm.response.to.be.json;",
              "});",
              "",
              "pm.test(\"Contains userId and totalScore/rank fields\", function () {",
              "    var body = pm.response.json();",
              "    pm.expect(body).to.be.an('object');",
              "    pm.expect(body).to.have.property('userId');",
              "    pm.expect(body).to.have.property('totalScore');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Top 10",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/leaderboard/top",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "leaderboard",
            "top"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is an array\", function () {",
              "    var body = pm.response.json();",
              "    pm.expect(body).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Player Rank",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/leaderboard/rank/{{userId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "leaderboard",
            "rank",
            "{{userId}}"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response contains userId and totalScore (rank may be null)\", function () {",
              "    var body = pm.response.json();",
              "    pm.expect(body).to.be.an('object');",
              "    pm.expect(body).to.have.property('userId');",
              "    pm.expect(body).to.have.property('totalScore');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "1",
      "type": "string"
    }
  ]
}